  <name>cerbere</name>
  <summary>A service watchdog</summary>
  <description>
    <p>A simple service to ensure uptime of essential processes</p>
  </description>
  <releases>
    <release version="2.5.0" date="2019-07-11" urgency="medium">
      <description>
        <p>Changes:</p>
        <ul>
          <li>Handle SIGHUP and SIGTERM to prevent hang on system shutdown</li>
        </ul>
      </description>
    </release>
    <release version="0.2.4" date="2018-07-27" urgency="medium">
      <description>
        <p>Changes:</p>
        <ul>
          <li>Install the autostart entry directly instead of expecting it to be symlinked by an external package later</li>
        </ul>
      </description>
    </release>
    <release version="0.2.3" date="2018-05-30" urgency="medium">
      <description>
        <p>Changes:</p>
        <ul>
          <li>Include the new Meson build system as well as various files renamed to follow RDNN naming convention</li>
        </ul>
      </description>
    </release>
  </releases>
  <provides>
    <binary>cerbere</binary>
  </provides>
